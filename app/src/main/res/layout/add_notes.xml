<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_notes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Title"
        android:textColor="@color/black_semi_transparent"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_notes_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Name your note"
        android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
        android:paddingLeft="5dp" />

    <TextView
        android:id="@+id/textView_notes_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Body"
        android:textColor="@color/black_semi_transparent"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_notes_content"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="top|left"
        android:hint="Add your note..."
        android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
        android:paddingLeft="5dp" />

    <Button
        android:id="@+id/button_notes_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="save_notes"
        android:text="save" />

</LinearLayout>
